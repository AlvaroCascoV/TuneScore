@model TuneScore.Models.User
@{
    ViewData["Title"] = "User Profile";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null){

<div class="card" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Username</h5>

        <p class="card-text"><strong>User ID:</strong> @Model.Id</p>

        <p class="card-text"><strong>Email:</strong> @Model.Email</p>

        <p class="card-text"><strong>Password:</strong> @Model.PasswordPlain</p>

        <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt</p>

        <p class="card-text"><strong>Role:</strong> @Model.Role</p>

        <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
    </div>
</div>
}