@model IEnumerable<TuneScore.Models.Album>

@{
    ViewData["Title"] = "Albums";
}
<style>
    .card:hover {
        transform: translateY(-5px);
        transition: 0.2s ease-in-out;
    }
</style>
<h1 class="mb-4">Albums</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">

                <!-- Imagen -->
                <img src="~/images/albums/@item.ImageName"
                     class="card-img-top"
                     alt="@item.Title"
                     style="height:250px; object-fit:cover;" />

                <div class="card-body d-flex flex-column">

                    <!-- Título -->
                    <h5 class="card-title">@item.Title</h5>

                    <!-- Artista -->
                    <p class="card-text text-muted mb-1">
                        @item.Artist?.Name
                    </p>

                    <!-- Año -->
                    <p class="card-text">
                        <small class="text-muted">
                            @item.ReleaseYear
                        </small>
                    </p>

                    <!-- Botones -->
                    <div class="mt-auto">
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-primary w-100 mb-1">
                            Details
                        </a>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary w-50 me-1">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-danger w-50">
                                Delete
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>